---
layout: default
---

{% if tag %}
  {% set tags = collections[tag] %}
  <section class="max-w-screen-xl mx-auto px-5">
    <h1 class="text-4xl md:text-5xl md:leading-tight tracking-tighter font-bold text-gray-800">Works tagged with '{{ tag }}'</h1>

      <div class="grid grid-cols-1 gap-5 md:gap-10 lg:gap-12 sm:grid-cols-2 lg:grid-cols-3 md:grid-flow-row-dense md:max-w-screen-xl md:mx-auto py-10 px-5">
        {% for item in tags %}
          <article>
            <a
              href="{{ item.url | url }}"
              title="view project details"
              class="bl block md:transform md:hover:-translate-y-2 md:transition-transform"
            >
              {% respimg item.data.featuredImg, item.data.title, 'w-full aspect-4/3' %}
            </a>
            <div class="hidden md:block mx-2 my-3">
              <span class="font-bold">{{item.data.title}}</span>
              <span class="text-gray-700">&mdash; {{item.data.description}}</span>
            </div>
          </article>
        {% endfor %}
      </div>

  </section>
{% endif %}
